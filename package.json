{
  "name": "@osabc/uiohook-napi",
  "version": "1.5.6",
  "author": {
    "name": "Alexander Drozdov"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/osabc/uiohook-napi.git"
  },
  "license": "MIT",
  "keywords": [
    "iohook",
    "uiohook",
    "libuiohook",
    "hook",
    "input",
    "keyboard",
    "mouse"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "install": "node-gyp-build",
    "prebuild": "prebuildify --napi",
    "build-ts": "tsc",
    "demo": "ts-node src/demo.ts",
    "make-libuiohook-patch": "git -C ./libuiohook diff --cached > ./src/libuiohook.patch",
    "apply-libuiohook-patch": "git -C ./libuiohook apply ../src/libuiohook.patch"
  },
  "files": [
    "dist",
    "binding.gyp",
    "libuiohook/src",
    "libuiohook/include",
    "src/lib",
    "prebuilds"
  ],
  "devDependencies": {
    "@types/node": "^24.10.2",
    "prebuildify": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "node-gyp-build": "^4.8.4"
  },
  "prebuild": {
    "test": "dist/prebuild-test-noop.js"
  },
  "gypfile": true,
  "engines": {
    "node": ">= 16"
  }
}
